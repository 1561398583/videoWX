/*评论区*/
.text {
    color: white;
    /* width: 100rpx; */
    text-align: center;
    margin: 20rpx 20rpx;
  }
  
  
  .talks {
    position: absolute;
    height: 900rpx;
    width: 100%;
    bottom: 0rpx;
    /* background-color: #0D0D0D; */
    background: rgba(236, 231, 231, 0.9);
    border-radius: 20rpx 20rpx 0 0;
    /* background-color: red; */
  }
  
  .talk-header {
    width: 100%;
    height: 70rpx;
    padding-top: 30rpx;
    text-align: center;
  }
  
  .talk-body {
    height: 700rpx;
  }
  
  .talk-footer {
    /* position: fixed;
    bottom: 0; */
    padding: 10rpx 30rpx;
  }
  
  /* 顶部元素  */
  
  .talk-count {
    font-size: 14px;
    height: 40rpx;
    color: #6b696a;
  }
  
  .talk-close {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    width: 22rpx;
    height: 22rpx;
  }
  
  /* 中部元素  */
  
  .talk-item {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    width: 100%;
    color: rgb(12, 12, 12);
  }
  
  .childrenComments {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    width: 100%;
    color: white;
  }
  
  
  
  .noMoreComment {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .talk-item-left {
    display: flex;
    flex-direction: row;
    margin: 20rpx 30rpx;
  }
  
  .talk-item-face {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
  }
  
  .talk-item-center {
    width: 70%;
    /* border-bottom: solid 1rpx #6a6869; */
    margin-right: 0rpx;
    /* margin-bottom: 20rpx; */
    padding:0 0 20rpx 10rpx;
    /*border-bottom: 1px solid  #292527;*/
  }
  
  .talk-item-right {
    text-align: center;
    margin: 20rpx 30rpx;
  }
  
  .talk-item-nickname {
    display: block;
    font-size: 13px;
    color: #A1A1A1;
  }
  
  .talk-item-content {
    display: block;
    margin-right: 10rpx;
    width: 100%;
    font-size: 16px;
    /* white-space: pre-line; */
  }
  
  .talk-item-time {
    font-size: 12px;
    color: #5B5B5B;
    display:block;
  }
  
  /* 底部元素  */
  
  .talk-input {
    padding: 10rpx 20rpx;
    background:#ffffff;
    border-radius: 30rpx;
    text-indent: 10rpx;
    font-size: 16px
  }
  
  .nodata{
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 400rpx;
  }